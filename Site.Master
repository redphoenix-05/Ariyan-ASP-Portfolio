        /* Enhanced Theme Toggle Styles */
        .theme-toggle {
            position: fixed;
            top: 60px;
            right: 20px;
            z-index: 1050;
            background: var(--card-bg, #ffffff);
            border: 3px solid var(--border-color, #007bff);
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 20px rgba(0, 123, 255, 0.3);
            transition: all 0.3s ease;
            animation: themeButtonPulse 3s ease-in-out infinite alternate;
        }
        
        .theme-toggle:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 30px rgba(0, 123, 255, 0.5);
        }
        
        .theme-toggle i {
            font-size: 1.4rem;
            color: var(--border-color, #007bff);
            transition: all 0.3s ease;
        }
        
        @keyframes themeButtonPulse {
            0% { box-shadow: 0 4px 20px rgba(0, 123, 255, 0.3); }
            100% { box-shadow: 0 6px 25px rgba(0, 123, 255, 0.5); }
        }
        
        /* Dark theme adjustments */
        [data-theme="dark"] .theme-toggle {
            background: #2d2d2d;
            border-color: #dc3545;
            box-shadow: 0 4px 20px rgba(220, 53, 69, 0.3);
        }
        
        [data-theme="dark"] .theme-toggle i {
            color: #dc3545;
        }
        
        [data-theme="dark"] .theme-toggle:hover {
            box-shadow: 0 6px 30px rgba(220, 53, 69, 0.5);
        }
    </style>
    
