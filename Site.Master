    <!-- Enhanced Theme Toggle Script -->
    <script>
        // Theme Management with enhanced functionality
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('theme-icon');
            const currentTheme = body.getAttribute('data-theme');
            
            console.log('Toggling theme. Current theme:', currentTheme);
            
            if (currentTheme === 'dark') {
                body.setAttribute('data-theme', 'light');
                if (themeIcon) {
                    themeIcon.className = 'fas fa-moon';
                }
                localStorage.setItem('theme', 'light');
                console.log('Switched to light theme');
            } else {
                body.setAttribute('data-theme', 'dark');
                if (themeIcon) {
                    themeIcon.className = 'fas fa-sun';
                }
                localStorage.setItem('theme', 'dark');
                console.log('Switched to dark theme');
            }
            
            // Visual feedback
            const themeToggle = document.querySelector('.theme-toggle');
            if (themeToggle) {
                themeToggle.style.transform = 'scale(1.2)';
                setTimeout(() => {
                    themeToggle.style.transform = 'scale(1)';
                }, 200);
            }
        }

        // Load saved theme on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Site.Master JavaScript loaded successfully');
            
            const savedTheme = localStorage.getItem('theme') || 'light';
            const themeIcon = document.getElementById('theme-icon');
            const body = document.body;
            
            console.log('Loading saved theme:', savedTheme);
            
            // Set initial theme
            body.setAttribute('data-theme', savedTheme);
            
            if (themeIcon) {
                if (savedTheme === 'dark') {
                    themeIcon.className = 'fas fa-sun';
                } else {
                    themeIcon.className = 'fas fa-moon';
                }
            }
            
            // Make theme toggle more visible
            const themeToggle = document.querySelector('.theme-toggle');
            if (themeToggle) {
                console.log('Theme toggle button found and configured');
                
                // Add extra visibility
                themeToggle.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.15)';
                });
                
                themeToggle.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            }

            // Update active navigation link
            const currentPage = window.location.pathname.split('/').pop() || 'Default.aspx';
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link:not(.dropdown-toggle)');
            
            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href === currentPage || (currentPage === '' && href === 'Default.aspx')) {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
            
            console.log('Theme system initialized. Current theme:', savedTheme);
        });
        
        // Test function to verify theme toggle is working
        function testThemeToggle() {
            console.log('Testing theme toggle...');
            toggleTheme();
        }
        
        // Make functions globally available
        window.toggleTheme = toggleTheme;
        window.testThemeToggle = testThemeToggle;
    </script>
